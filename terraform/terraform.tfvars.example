# Terraform Variables Configuration
# Copy this file to terraform.tfvars and fill in your values
# 
# IMPORTANT: terraform.tfvars is gitignored and should NEVER be committed
# This file (terraform.tfvars.example) is safe to commit as it contains no sensitive data

# AWS Configuration
aws_region = "us-east-1"

# S3 Bucket Configuration
s3_bucket_name = "mixtape-creator-tool"

# Environment
environment = "production"

# CloudFront Configuration
cloudfront_price_class = "PriceClass_100"  # Options: PriceClass_100 (US, Canada, Europe), PriceClass_200 (adds Asia, Middle East, Africa), PriceClass_All (all regions)

# Custom Domain Configuration (Optional)
# Leave empty strings if not using a custom domain
# 
# To use a custom domain:
# 1. Create an ACM certificate in us-east-1 (required for CloudFront)
# 2. Get the certificate ARN from AWS Certificate Manager
# 3. Fill in the values below
domain_name = ""
certificate_arn = ""

# Example with custom domain (uncomment and fill in):
# domain_name = "mixtape.yourdomain.com"
# certificate_arn = "arn:aws:acm:us-east-1:YOUR_ACCOUNT_ID:certificate/YOUR_CERTIFICATE_ID"

